@model Shop4U.Models.Branches

@{
    ViewData["Title"] = "יצירת סניף";
}

<h1 align="center">יצירת סניף</h1>

<hr />
<section id="register_form" class="form-signin" dir="rtl">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group">
            <label asp-for="branch_name" class="control-label">שם הסניף</label>
            <input asp-for="branch_name" class="form-control" placeholder="שם הסניף" required type="text" />
            <span asp-validation-for="branch_name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="branch_address" class="control-label">כתובת הסניף</label>
            <input asp-for="branch_address" class="form-control" placeholder="כתובת הסניף" required type="text" />
            <span asp-validation-for="branch_address" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="branch_owner" class="control-label">מנהל הסניף</label>
            <input asp-for="branch_owner" class="form-control" placeholder="מנהל הסניף" required type="text" />
            <span asp-validation-for="branch_owner" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="branch_lat" class="control-label">קו רוחב</label>
            <input asp-for="branch_lat" class="form-control" placeholder="קו רוחב" required type="text" />
            <span asp-validation-for="branch_lat" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label asp-for="branch_lng" class="control-label">קו אורך</label>
            <input asp-for="branch_lng" class="form-control" placeholder="קו אורך" required type="text" />
            <span asp-validation-for="branch_lng" class="text-danger"></span>
        </div>




        <div class="form-group">
            <input type="submit" value="צור סניף" class="btn btn-primary" />
        </div>



    </form>
    <div>
        <a asp-action="Index">חזרה לתצוגת סניפים</a>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
