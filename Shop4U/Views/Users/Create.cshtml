@model Shop4U.Models.Users

@{
    ViewData["Title"] = "יצירת משתמש";
}

<h1 align="center">יצירת משתמש</h1>

<hr />
<section id="register_form" class="form-signin" dir="rtl">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group">
            <label asp-for="user_email" class="control-label">כתובת מייל</label>
            <input asp-for="user_email" class="form-control" placeholder="כתובת מייל" required type="email" />
            <span asp-validation-for="user_email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="user_fullname" class="control-label">שם מלא</label>
            <input asp-for="user_fullname" class="form-control" placeholder="שם מלא" required type="text" />
            <span asp-validation-for="user_fullname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="user_password" class="control-label">סיסמא</label>
            <input asp-for="user_password" class="form-control" placeholder="סיסמא" required type="password" />
            <span asp-validation-for="user_password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="user_phone" class="control-label">נייד</label>
            <input asp-for="user_phone" class="form-control" placeholder="נייד" required />
            <span asp-validation-for="user_phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="user_city" class="control-label">עיר מגורים</label>
            <input asp-for="user_city" class="form-control" placeholder="עיר מגורים" required type="text" />
            <span asp-validation-for="user_city" class="text-danger"></span>
        </div>       
        
        <div class="form-group">
            <label asp-for="birth_year" class="control-label">שנת לידה</label>
            <input asp-for="birth_year" class="form-control" placeholder="שנת לידה" required type="text" />
            <span asp-validation-for="birth_year" class="text-danger"></span>
        </div>
        <div class="form-group" dir="rtl">
            <label asp-for="user_gender" class="control-label">מין</label>

            @Html.DropDownList("user_gender",
            new SelectList(Enum.GetValues(typeof(Gender))),
            "בחר מין",
            new { @class = "form-control" })


            <span asp-validation-for="user_gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role" class="control-label">תפקיד (User,Supplier,Admin)</label>
            <input asp-for="Role" class="form-control" placeholder="תפקיד (User,Supplier,Admin)" required type="text" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="צור משתמש" class="btn btn-primary" />
        </div>



    </form>
    <div>
        <a asp-action="Index">חזרה לתצוגת משתמשים</a>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
