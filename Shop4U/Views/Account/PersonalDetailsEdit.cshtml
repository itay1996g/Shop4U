@model Shop4U.Models.Users

@{
    ViewData["Title"] = "עריכת פרטים אישיים";
}




<h1 align="center">עריכת פרטים</h1>

<hr />
<div class="row" align="right" dir="rtl">
    <div class="col-md-4">
        <form asp-action="PersonalDetailsEdit" class="form-signin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UID" />
            <input type="hidden" asp-for="user_gender" />
            <input type="hidden" asp-for="birth_year" />
            <input type="hidden" asp-for="Role" />

            <div class="form-group">
                <label asp-for="user_email" class="control-label">כתובת מייל</label>
                <input asp-for="user_email" class="form-control" />
                <span asp-validation-for="user_email" class="text-danger"></span>
                <input type="hidden" asp-for="user_password" />

            </div>
            <div class="form-group">
                <label asp-for="user_fullname" class="control-label">שם מלא</label>
                <input asp-for="user_fullname" class="form-control" />
                <span asp-validation-for="user_fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user_phone" class="control-label">נייד</label>
                <input asp-for="user_phone" class="form-control" />
                <span asp-validation-for="user_phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user_city" class="control-label">עיר מגורים</label>
                <input asp-for="user_city" class="form-control" />
                <span asp-validation-for="user_city" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CreatedDate" />

            <div class="form-group">
                <input type="submit" value="ערוך פרטים" class="btn btn-primary" />
            </div>
            <a asp-action="PersonalDetails">
                חזור אחורה
            </a>
        </form>
     
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
